                <a href="/improvement-tasks" class="nav-item">Á¢∫Ë™ç‰∫ãÈ†Ö</a>
                <a href="/improvement-strategies" class="nav-item">ÊîπÂñÑÊñΩÁ≠ñ</a>
                <a href="/chatwork-test" class="nav-item">„ÉÅ„É£„ÉÉ„Éà„ÉØ„Éº„ÇØ„ÉÜ„Çπ„Éà</a>
            </nav>
        </div>

        <main class="main-content">

    <div class="alert-history-page">
        <div class="page-header">
            <h2>üìã „Ç¢„É©„Éº„ÉàÂ±•Ê≠¥</h2>
            <div class="header-info">
                <span>üìä „Çµ„Éº„Éê„Éº„Åã„ÇâÊ∏°„Åï„Çå„Åü„Ç¢„É©„Éº„ÉàÂ±•Ê≠¥Êï∞: <%= alerts ? alerts.length : 0 %>‰ª∂</span>
                <span>Á∑èÊï∞: <span id="total-count"><%= alerts ? alerts.length : 0 %></span>‰ª∂</span>
                <span>„Ç¢„ÇØ„ÉÜ„Ç£„Éñ: <span id="active-count"><%= alerts ? alerts.filter(a => a.status === 'active').length : 0 %></span>‰ª∂</span>
                <span>Ëß£Ê±∫Ê∏à„Åø: <span id="resolved-count"><%= alerts ? alerts.filter(a => a.status === 'resolved').length : 0 %></span>‰ª∂</span>
            </div>
        </div>

        <div class="history-section">
            <h3>ÈÅéÂéª30Êó•Èñì„ÅÆ„Ç¢„É©„Éº„ÉàÂ±•Ê≠¥</h3>
            
            <div id="alert-history-container">
                <% if (alerts && alerts.length > 0) { %>
                    <% 
                    // Êó•‰ªòÂà•„Å´„Ç∞„É´„Éº„ÉóÂåñ
                    const groupedByDate = {};
                    alerts.forEach(alert => {
                        const date = new Date(alert.timestamp).toLocaleDateString('ja-JP');
                        if (!groupedByDate[date]) {
                            groupedByDate[date] = [];
                        }
                        groupedByDate[date].push(alert);
                    });
                    
                    function getLevelClass(level) {
                        return level === 'high' ? 'level-critical' : level === 'medium' ? 'level-warning' : 'level-info';
                    }
                    
                    function getLevelIcon(level) {
                        return level === 'high' ? 'üî¥' : level === 'medium' ? '‚ö†Ô∏è' : '‚ÑπÔ∏è';
                    }
                    
                    function getStatusDisplayName(status) {
                        return status === 'active' ? '„Ç¢„ÇØ„ÉÜ„Ç£„Éñ' : status === 'resolved' ? 'Ëß£Ê±∫Ê∏à„Åø' : 'Á¢∫Ë™çÊ∏à„Åø';
                    }
                    %>
                    
                    <% Object.entries(groupedByDate).sort(([a], [b]) => new Date(b) - new Date(a)).forEach(([date, dayAlerts]) => { %>
                        <div class="date-section">
                            <h4 class="date-header"><%= date %> (<%= dayAlerts.length %>‰ª∂)</h4>
                            <div class="date-alerts">
                                <% dayAlerts.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp)).forEach(alert => { %>
                                    <div class="history-card <%= getLevelClass(alert.level) %>">
                                        <div class="card-header">
                                            <div class="alert-info">
                                                <span class="level-icon"><%= getLevelIcon(alert.level) %></span>
                                                <span class="metric-badge"><%= alert.metric %></span>
                                                <span class="alert-time"><%= new Date(alert.timestamp).toLocaleTimeString('ja-JP') %></span>
                                            </div>
                                            <div class="alert-status status-<%= alert.status %>"><%= getStatusDisplayName(alert.status) %></div>
                                        </div>
                                        <div class="alert-message"><%= alert.message %></div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="no-history">üìã „Ç¢„É©„Éº„ÉàÂ±•Ê≠¥„ÅØ„ÅÇ„Çä„Åæ„Åõ„Çì</div>
                <% } %>
