    <!-- ゴール設定モーダル -->
    <div id="goalSettingsModal" class="modal-overlay" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>⚙️ ゴール設定</h3>
                <button class="close-button" onclick="closeGoalSettings()">×</button>
